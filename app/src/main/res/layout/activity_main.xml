<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.androidejercicio2.MainActivity">

    <TextView
        android:id="@+id/texto1"
        android:layout_width="77dp"
        android:layout_height="19dp"
        android:layout_marginTop="136dp"
        android:text="0"
        app:layout_constraintEnd_toStartOf="@+id/contador1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reset" />

    <Button
        android:id="@+id/contador1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:text="+1"
        app:layout_constraintEnd_toStartOf="@+id/reset1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/texto1"
        app:layout_constraintTop_toBottomOf="@+id/reset" />

    <TextView
        android:id="@+id/texto"
        android:layout_width="100dp"
        android:layout_height="16dp"
        android:layout_marginTop="136dp"
        android:text="0"
        app:layout_constraintBottom_toTopOf="@+id/contador1"
        app:layout_constraintEnd_toStartOf="@+id/reset"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.052" />

    <TextView
        android:id="@+id/texto4"
        android:layout_width="85dp"
        android:layout_height="21dp"
        android:layout_marginTop="156dp"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/contador4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/texto3"
        app:layout_constraintVertical_bias="0.024" />

    <TextView
        android:id="@+id/texto3"
        android:layout_width="77dp"
        android:layout_height="18dp"
        android:layout_marginTop="136dp"
        android:text="0"
        app:layout_constraintEnd_toStartOf="@+id/contador3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/texto2" />

    <TextView
        android:id="@+id/texto2"
        android:layout_width="90dp"
        android:layout_height="18dp"
        android:layout_marginTop="152dp"
        android:text="0"
        app:layout_constraintEnd_toStartOf="@+id/contador2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/texto1" />

    <Button
        android:id="@+id/contador4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:text="+1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/reset4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/texto4"
        app:layout_constraintTop_toBottomOf="@+id/contador3"
        app:layout_constraintVertical_bias="0.097" />

    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset All"
        app:layout_constraintBottom_toTopOf="@+id/reset1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/texto"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/reset1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        app:layout_constraintBottom_toTopOf="@+id/reset2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/contador1"
        app:layout_constraintTop_toBottomOf="@+id/reset" />

    <Button
        android:id="@+id/reset3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        app:layout_constraintBottom_toTopOf="@+id/reset4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/contador3"
        app:layout_constraintTop_toBottomOf="@+id/reset2" />

    <Button
        android:id="@+id/reset4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/contador4"
        app:layout_constraintTop_toBottomOf="@+id/reset3" />

    <Button
        android:id="@+id/reset2"
        android:layout_width="93dp"
        android:layout_height="53dp"
        android:text="Reset"
        app:layout_constraintBottom_toTopOf="@+id/reset3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/contador2"
        app:layout_constraintTop_toBottomOf="@+id/reset1" />

    <Button
        android:id="@+id/contador2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:text="+1"
        app:layout_constraintEnd_toStartOf="@+id/reset2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/texto2"
        app:layout_constraintTop_toBottomOf="@+id/contador1" />

    <Button
        android:id="@+id/contador3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="108dp"
        android:text="+1"
        app:layout_constraintEnd_toStartOf="@+id/reset3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/texto3"
        app:layout_constraintTop_toBottomOf="@+id/contador2" />
</androidx.constraintlayout.widget.ConstraintLayout>